{
    "multipart": [
        {   "apply": { "model": "minestuck_alternia:hiveglass_burgundy_post" }},
        {   "when": { "north": true },
            "apply": { "model": "minestuck_alternia:hiveglass_burgundy_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "minestuck_alternia:hiveglass_burgundy_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "minestuck_alternia:hiveglass_burgundy_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "minestuck_alternia:hiveglass_burgundy_side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "minestuck_alternia:hiveglass_burgundy_noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "minestuck_alternia:hiveglass_burgundy_noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "minestuck_alternia:hiveglass_burgundy_noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "minestuck_alternia:hiveglass_burgundy_noside", "y": 270 }
        }
    ]
}
